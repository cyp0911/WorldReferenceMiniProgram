.page {
  min-height: 100vh;
  background-color: var(--gray-50);
}

/* 顶部统计区域 */
.header-section {
  position: relative;
}

.stats-card {
  margin-top: -48rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 收藏卡片 */
.bookmark-card {
  transition: transform 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.bookmark-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 空状态 */
.empty-state {
  padding: 160rpx 40rpx;
}

/* 空间间隔 */
.space-y-4 > view + view {
  margin-top: 32rpx;
}

.space-x-3 > view + view {
  margin-left: 24rpx;
}

.space-x-4 > view + view {
  margin-left: 32rpx;
}

/* 文本截断 */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 加载更多按钮 */
.load-more-btn {
  transition: all 0.15s ease-in-out;
}

.load-more-btn:active {
  transform: scale(0.95);
  background-color: var(--gray-200);
}

/* 图片容器 */
.object-cover {
  object-fit: cover;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.bookmark-card {
  animation: fadeInUp 0.4s ease-out;
}

.bookmark-card:nth-child(1) { animation-delay: 0.1s; }
.bookmark-card:nth-child(2) { animation-delay: 0.2s; }
.bookmark-card:nth-child(3) { animation-delay: 0.3s; }

/* 统计数字动画 */
@keyframes countUp {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.stats-card .text-2xl,
.stats-card .text-lg {
  animation: countUp 0.6s ease-out;
}

/* 悬停效果 */
.bookmark-card-tap {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 操作按钮效果 */
.text-red-500 {
  color: var(--red-500);
  transition: all 0.15s ease-in-out;
}

.text-red-500:active {
  color: var(--red-600);
  transform: scale(0.95);
}

.text-gray-600 {
  color: var(--gray-600);
  transition: all 0.15s ease-in-out;
}

.text-gray-600:active {
  color: var(--gray-700);
}

/* 响应式优化 */
@media (max-width: 375px) {
  .stats-card {
    padding: 32rpx;
    margin: 0 32rpx -48rpx;
  }
  
  .bookmark-card {
    margin-bottom: 24rpx;
  }
  
  .empty-state {
    padding: 120rpx 32rpx;
  }
}

/* 按钮样式增强 */
button {
  border: none;
  outline: none;
}

button:active {
  opacity: 0.8;
}

/* 统计卡片增强 */
.shadow-lg {
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 网格布局辅助 */
.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

/* 间距辅助类 */
.mr-2 { margin-right: 16rpx; }
.mr-3 { margin-right: 24rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mt-6 { margin-top: 48rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-3 { padding-top: 24rpx; padding-bottom: 24rpx; }
.px-6 { padding-left: 48rpx; padding-right: 48rpx; }
.p-4 { padding: 32rpx; }

.flex-1 {
  flex: 1;
}