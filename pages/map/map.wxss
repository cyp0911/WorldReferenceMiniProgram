/* 页面布局 */
.page {
  min-height: 100vh;
  background-color: var(--gray-50);
}

/* 顶部标题栏 */
.header {
  position: sticky;
  top: 0;
  z-index: 20;
}

/* 地图容器 */
.map-container {
  width: 100%;
  aspect-ratio: 2/1;
  position: relative;
  overflow: hidden;
}

.world-map {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--blue-50) 0%, var(--blue-100) 50%, var(--blue-50) 100%);
  position: relative;
  border-radius: 8px;
}

/* 世界地图轮廓 */
.map-outline {
  position: absolute;
  inset: 0;
  opacity: 0.3;
}

.continent {
  position: absolute;
  background-color: var(--green-500);
  border-radius: 8rpx;
  opacity: 0.7;
}

.continent-north-america {
  width: 180rpx;
  height: 120rpx;
  top: 20%;
  left: 15%;
  transform: rotate(-10deg);
  background: linear-gradient(135deg, var(--green-400), var(--green-600));
}

.continent-south-america {
  width: 80rpx;
  height: 140rpx;
  top: 45%;
  left: 25%;
  transform: rotate(-5deg);
  background: linear-gradient(135deg, var(--green-300), var(--green-500));
}

.continent-europe {
  width: 100rpx;
  height: 80rpx;
  top: 15%;
  left: 45%;
  background: linear-gradient(135deg, var(--yellow-300), var(--yellow-500));
}

.continent-africa {
  width: 120rpx;
  height: 160rpx;
  top: 35%;
  left: 46%;
  background: linear-gradient(135deg, var(--yellow-400), var(--yellow-600));
}

.continent-asia {
  width: 240rpx;
  height: 140rpx;
  top: 18%;
  left: 55%;
  background: linear-gradient(135deg, var(--red-400), var(--red-600));
}

.continent-oceania {
  width: 100rpx;
  height: 60rpx;
  top: 65%;
  left: 70%;
  background: linear-gradient(135deg, var(--purple-400), var(--purple-600));
}

/* 标记层 */
.markers-layer {
  position: absolute;
  inset: 0;
  z-index: 10;
}

.country-marker {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 脉冲动画 */
.ping-animation {
  animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
}

/* 标记点 */
.marker-dot {
  transition: transform 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.country-marker-active .marker-dot {
  transform: scale(1.1);
  box-shadow: 0 10px 25px rgba(37, 99, 235, 0.3);
}

.country-marker-active .marker-tooltip {
  opacity: 1;
}

.marker-tooltip {
  pointer-events: none;
  white-space: nowrap;
  opacity: 0;
  transition: opacity 0.15s ease-in-out;
}

/* 分类标签 */
.category-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  white-space: nowrap;
  transition: all 0.15s ease-in-out;
}

.category-tag-active {
  background-color: var(--blue-600);
  color: white;
}

.category-tag-inactive {
  background-color: var(--gray-100);
  color: var(--blue-600);
}

/* 新闻卡片 */
.news-card {
  transition: background-color 0.15s ease-in-out;
}

.news-card-active {
  background-color: var(--gray-50);
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 弹窗样式 */
.modal-overlay {
  transition: opacity 0.3s ease-in-out;
}

.modal-content {
  max-height: 90vh;
  overflow: hidden;
}

/* 新闻列表滚动 */
.news-list {
  min-height: 300rpx;
}

/* 空间间隔 */
.space-y-3 > view + view {
  margin-top: 24rpx;
}

.space-x-2 > view + view {
  margin-left: 16rpx;
}

/* 响应式辅助类 */
.min-w-60rpx {
  min-width: 60rpx;
}

.min-h-70vh {
  min-height: 70vh;
}

.max-h-70vh {
  max-height: 70vh;
}

.max-w-md {
  max-width: 448px;
  margin-left: auto;
  margin-right: auto;
}

/* 网格辅助类 */
.grid-cols-3 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

/* 圆角增强 */
.rounded-t-2xl {
  border-radius: 16rpx 16rpx 0 0;
}

/* 动画增强 */
.animate-slide-up {
  animation: slide-up 0.3s ease-out;
}

/* 阴影增强 */
.shadow-md-hover:hover {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.bg-gray-50-hover:hover {
  background-color: var(--gray-50);
}

/* 活动状态 */
.bg-gray-100-active:active {
  background-color: var(--gray-100);
}

.scale-95-active:active {
  transform: scale(0.95);
}

/* 焦点状态 */
.outline-none:focus {
  outline: none;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 6rpx;
}

::-webkit-scrollbar-track {
  background: var(--gray-100);
}

::-webkit-scrollbar-thumb {
  background: var(--gray-300);
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--gray-400);
}

/* 动画关键帧 */
@keyframes ping {
  75%, 100% {
    transform: scale(2);
    opacity: 0;
  }
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}